<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_30sp</item>
        <item name="android:text">@string/checkout_view</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewIncrement">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/margin_20dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_10dp</item>
        <item name="android:layout_width">@dimen/margin_20dp</item>
        <item name="android:layout_height">@dimen/margin_20dp</item>
        <item name="android:background">@drawable/ic_add_black_24dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewDecrement">
        <item name="android:visibility">gone</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">@dimen/margin_20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_remove_black_24dp</item>
    </style>

    <style name="TextViewCart">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/margin_10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/cart_tv_cart_total</item>
    </style>

   <style name="CommonLinearLayout">
       <item name="android:weightSum">3</item>
       <item name="android:orientation">horizontal</item>
       <item name="android:paddingLeft">@dimen/margin_20dp</item>
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">match_parent</item>
   </style>

    <style name="CommonCardLayout">
        <item name="android:layout_marginRight">@dimen/margin_10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/margin_60dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>



</resources>
